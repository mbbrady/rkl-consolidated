graph TB
    TITLE["<b>System Impact: Phase-0 Artifacts & Telemetry</b><br/><i>Complete Transparency for Research and Accountability</i>"]

    subgraph phases["<b>4-Phase Architecture with Agent Mapping</b>"]
        direction LR

        P1["<b>Phase 1: Acquisition</b><br/>RSS Monitoring & Filtering<br/><br/><b>Agents:</b> None (scheduled task)"]

        P2["<b>Phase 2: Local Processing</b><br/>Summary & Metadata Extraction<br/><br/><b>Agents (3):</b><br/>• Summary Agent<br/>• Lay Explanation Agent<br/>• Metadata Extraction Agent"]

